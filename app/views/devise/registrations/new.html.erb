<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div>
      <%= f.label :name, 'Имя' %><br>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :surname, 'Фамилия' %> <br>
      <%= f.text_field :surname %>
    </div>

    <div>
      <%= f.label :avatar, 'Фото' %> <br>
      <%= f.file_field :avatar %>
    </div>

    <div>
        <%= f.label :role, 'Кем хотите быть?' %><br />
        <%= f.collection_select :role_id, Role.all, :id, :name %>
    </div>

    <div>
      <%= f.label :description, 'Описание о себе' %> <br>
      <%= f.text_area :description %>
    </div>

    <div>
      <%= f.label :phone, 'Номер телефона' %> <br>
      <%= f.text_field :phone %>
    </div>

    <div>
      <%= f.label :social_network, 'Социальные сети' %> <br>
      <%= f.text_area :social_network %>
    </div>

    <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div> <br>

  <div class="actions">
    <%= f.submit 'Отправить заявку на рассмотрение администратора' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>

